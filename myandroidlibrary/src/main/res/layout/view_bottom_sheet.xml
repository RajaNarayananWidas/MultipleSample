<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet"
    android:orientation="vertical"
    android:padding="15dp">


    <LinearLayout
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/dialog_title"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/item_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:textColor="@color/dialog_subtitle"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView

        android:id="@+id/item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_view"
        android:layout_marginLeft="@dimen/biometric_bottom_sheet_padding"
        android:layout_marginTop="@dimen/biometric_bottom_sheet_padding"
        android:layout_marginRight="@dimen/biometric_bottom_sheet_padding"
        android:padding="5dp"
        android:textColor="@color/dialog_title"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/img_fingerprint"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@id/item_description"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/biometric_bottom_sheet_padding"
        android:padding="14dp"
        android:src="@drawable/ic_fingerprint" />


    <TextView
        android:id="@+id/item_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_fingerprint"
        android:gravity="center"
        android:padding="3dp"
        android:layout_margin="3dp"
        android:textColor="@color/red" />


    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_status"
        android:background="@null"
        android:padding="5dp"
        android:layout_margin="5dp"
        android:text="@string/cancel"
        android:textColor="@color/colorPrimary" />






    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_status"
        android:layout_marginTop="@dimen/margin_xxlarge"
        android:background="@null"
        android:paddingTop="@dimen/margin_xxlarge"
        android:textColor="@color/dialog_cancel_btn" />

</RelativeLayout>



